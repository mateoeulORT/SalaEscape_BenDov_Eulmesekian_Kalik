<body class="Hab2">

    <header>
        <div>
            <h1>BAÑO</h1>
            <h3>Encuentra unos datos que formarán una palabra.</h3 >
        </div> 
    </header>

    @if (ViewBag.Activado == true)
    {
        <div class="contenedor-ventana">
            <div class="ventana">
                <h1>@Html.Raw(ViewBag.Letra)</h1>
                
                <form action="@Url.Action("CerrarVentana")">
                    <button type="input">X</button>
                </form>
            </div>
        </div>
    }
    
    <div class="botones">
        <form action="@Url.Action("InfoGrifos")" method="get">
            <button class="boton1" type="input" name="grifo" value="grifo1"> </button> 
            <button class="boton2" type="input" name="grifo" value="grifo2"> </button> 
            <button class="boton3" type="input" name="grifo" value="grifo3"> </button> 
            <button class="boton4" type="input" name="grifo" value="grifo4"> </button> 
        </form>
    </div>
        


    <form class="envio" action="@Url.Action("Habitacion")">
        <input type="hidden" name="sala" value="2" />
        <input type="text" name="clave"  placeholder="Respuesta...">
        <input type="submit" value="Validar">
    </form>
    <h2>@Html.Raw(ViewBag.Error)</h2>

</body>